const { title, date, content } = Astro.props;

import Layout from '../../layouts/Layout.astro';
import BreakingNews from '../../components/BreakingNews.astro';
---

<Layout title={title}>
  <article class="blog-post">
    <div class="post-header">
      <h1>{title}</h1>
      <div class="post-date">{date}</div>
    </div>
    <div class="post-content">
      {content.map((paragraph, index) => (
        <p key={index}>{paragraph}</p>
      ))}
    </div>
    <a href="/" class="back-link">← Back to Home</a>
  </article>

  <div class="news-separator">
    <h2>More CommunityAdventures</h2>
    <p>Because one weird story deserves another...</p>
  </div>

  <BreakingNews />
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #f1f1f1;
  }

  h1 {
    font-size: 2.5rem;
    color: #2d3436;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-date {
    color: #636e72;
    font-size: 1.1rem;
    font-style: italic;
  }

  .post-content {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #2d3436;
  }

  .post-content p {
    margin-bottom: 2rem;
  }

  .post-content p:last-child {
    margin-bottom: 0;
  }

  .back-link {
    display: inline-block;
    margin-top: 3rem;
    padding: 0.8rem 1.5rem;
    color: #00b894;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid #00b894;
    border-radius: 2rem;
  }

  .back-link:hover {
    color: white;
    background-color: #00b894;
    transform: translateY(-2px);
  }

  .news-separator {
    text-align: center;
    padding: 4rem 2rem 2rem;
    background: #f8f9fa;
  }

  .news-separator h2 {
    font-size: 2rem;
    color: #2d3436;
    margin-bottom: 0.5rem;
  }

  .news-separator p {
    color: #636e72;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 1.5rem;
      margin: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .post-content {
      font-size: 1.1rem;
    }

    .news-separator {
      padding: 3rem 1rem 1.5rem;
    }

    .news-separator h2 {
      font-size: 1.5rem;
    }
  }
</style>