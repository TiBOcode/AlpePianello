---
import Layout from '../layouts/Layout.astro';
import VisionSection from '../components/VisionSection.astro';
import VideoSection from '../components/VideoSection.astro';

---

<Layout title="Our Vision - Alpe Pianello">
  <div class="vision-page">
    <header class="page-header">
      <h1>Our Vision</h1>
      <p>Building a sustainable future together</p>
    </header>

    <VisionSection />
    <VideoSection />
  </div>
</Layout>

<style>
  .vision-page {
    min-height: 100vh;
    background-color: #f8f9fa;
  }

  .page-header {
    text-align: center;
    padding: 6rem 2rem;
    background-color: #fff;
    background-image: url('/Wood2.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    color: white;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
  }

  .page-header h1 {
    position: relative;
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-header p {
    position: relative;
    font-size: 1.5rem;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 4rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1.2rem;
    }
  }
</style>