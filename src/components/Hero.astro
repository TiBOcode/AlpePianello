---
interface Props {
  title: string;
  subtitle: string;
  contactName?: string;
}

const { title, subtitle, contactName = "Maria" } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <img src="/src/assets/Logo.png" alt="Alpe Pianello Logo" class="logo" />
    <h1 class="title">{title}</h1>
    <p class="subtitle">{subtitle}</p>
    
    <div class="cta-buttons">
      <a href="/explore" class="cta-button">Come to Explore</a>
      <a href="/support" class="cta-button">Come to Support</a>
    </div>


  </div>
</section>

<style>
  .hero {
    min-height: 80vh;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.4)
    ),
    url('/Community.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .logo {
    width: 200px;
    height: auto;
    margin-bottom: 2rem;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .cta-button {
    background-color: rgba(255, 255, 255, 0.9);
    color: #333;
    padding: 0.8rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background-color: white;
    transform: translateY(-2px);
  }

  .contact-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem;
    border-radius: 1rem;
    backdrop-filter: blur(10px);
  }

  .contact-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .logo {
      width: 150px;
      margin-bottom: 1.5rem;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .contact-info {
      flex-direction: column;
      text-align: center;
    }
  }
</style>