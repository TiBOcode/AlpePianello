---
interface Props {
  title: string;
  subtitle: string;
  contactName?: string;
}

const { title, subtitle, contactName = "Maria" } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <img src="/src/assets/Logo.png" alt="Alpe Pianello Logo" class="logo" />
    <h1 class="title">{title}</h1>
    <p class="subtitle">{subtitle}</p>
    
    <div class="cta-container">
      <a href="/system" class="cta-button">
        <div class="cta-steps">
          <span class="step">1 Community</span>
          <span class="step-divider">•</span>
          <span class="step">2 Roles</span>
          <span class="step-divider">•</span>
          <span class="step">3 Periods</span>
        </div>
        <span class="cta-arrow">→</span>
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 80vh;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.4)
    ),
    url('/Community.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .logo {
    width: 200px;
    height: auto;
    margin-bottom: 2rem;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .cta-container {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .cta-button {
    background-color: rgba(255, 255, 255, 0.9);
    color: #333;
    padding: 1rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cta-steps {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .step {
    font-weight: 600;
  }

  .step-divider {
    color: #2F7336;
  }

  .cta-arrow {
    font-size: 1.5rem;
  }

  .cta-button:hover {
    background-color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .logo {
      width: 150px;
      margin-bottom: 1.5rem;
    }

    .title {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .cta-button {
      padding: 0.8rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>