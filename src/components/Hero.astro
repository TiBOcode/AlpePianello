---
interface Props {
  title: string;
  subtitle: string;
  contactName?: string;
}

const { title, subtitle, contactName = "Maria" } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <img src="/src/assets/Logo.png" alt="Alpe Pianello Logo" class="logo" />
    <h1 class="title">Alpe Pianello</h1>
    <p class="subtitle">A Community in Progress</p>
    
    <div class="cta-container">
      <a href="/vision" class="cta-button">
        <span class="cta-text">Visit Our Open Community</span>
        <span class="date-range">April 1st - October 31st</span>
        <span class="cta-arrow">â†’</span>
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 80vh;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.4)
    ),
    url('/Community.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .logo {
    width: 200px;
    height: auto;
    margin-bottom: 2rem;
    animation: float 6s ease-in-out infinite;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .title {
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
    animation: slideIn 1s ease-out;
  }

  .subtitle {
    font-size: 1.8rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    opacity: 0.9;
    animation: fadeIn 1.5s ease-out;
  }

  .cta-container {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
    animation: bounce 1s ease-out;
  }

  .cta-button {
    background-color: rgba(255, 255, 255, 0.95);
    color: #333;
    padding: 1.5rem 3rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .cta-text {
    font-size: 1.4rem;
    color: #00b894;
  }

  .date-range {
    font-size: 1rem;
    opacity: 0.8;
  }

  .cta-arrow {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .cta-button:hover {
    background-color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover .cta-arrow {
    transform: translateX(5px);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes slideIn {
    from { transform: translateY(-30px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes bounce {
    0% { transform: scale(0.8); opacity: 0; }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); opacity: 1; }
  }

  @media (max-width: 768px) {
    .logo {
      width: 150px;
      margin-bottom: 1.5rem;
    }

    .title {
      font-size: 3rem;
    }

    .subtitle {
      font-size: 1.4rem;
    }

    .cta-button {
      padding: 1.2rem 2rem;
    }

    .cta-text {
      font-size: 1.2rem;
    }

    .date-range {
      font-size: 0.9rem;
    }
  }
</style>