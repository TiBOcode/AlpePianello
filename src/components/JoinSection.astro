---
interface Props {
  type: 'explorer' | 'supporter';
}

const content = {
  explorer: {
    title: 'Join as an Explorer',
    description: 'Experience our community life without long-term commitment',
    features: [
      'Flexible stay duration',
      'Access to all community activities',
      'Daily rate includes accommodation and meals',
      'Perfect for short-term experiences'
    ],
    buttonText: 'Start Your Journey'
  },
  supporter: {
    title: 'Join as a Supporter',
    description: 'Commit to community work and stay longer for less',
    features: [
      '5 hours work, 5 days a week',
      'Reduced rates or free extended stays',
      'Deeper community integration',
      'Skills exchange opportunities'
    ],
    buttonText: 'Become a Supporter'
  }
};

const { type } = Astro.props;
const option = content[type];
---

<div class="join-option">
  <h3>{option.title}</h3>
  <p class="description">{option.description}</p>
  
  <ul class="features">
    {option.features.map(feature => (
      <li>{feature}</li>
    ))}
  </ul>

  <a href={`/join-${type}`} class="join-button">
    {option.buttonText}
  </a>
</div>

<style>
  .join-option {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  h3 {
    color: #2d3436;
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .description {
    color: #636e72;
    margin-bottom: 2rem;
  }

  .features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
  }

  .features li {
    margin: 0.8rem 0;
    color: #2d3436;
  }

  .join-button {
    display: inline-block;
    background-color: #00b894;
    color: white;
    padding: 1rem 2rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .join-button:hover {
    background-color: #00a28d;
    transform: translateY(-2px);
  }
</style>